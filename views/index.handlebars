<div class="jumbotron">
    <img src="/public/assets/img/hamburger-fast-food-french-fries-cheeseburger-vector-burger-fries-drinks.jpg">
    <h1 class="display-4">Eat Da Burger!</h1>
</div>
<div class="container">
    <div class="row">
        <div class=" col-sm">
            <h3>Burger Menu</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h3>Burgers That Have Been Devoured</h3>
            <ul>
                {{#each}}
                {{#if}}
                    {{>burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <h3>What kind of burger would you like?</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>
            <div class="form-group">
                <label for="eat">DEVOUR!</label>
                <br>
                <input type="raido" name="devour" value="1"checked> Ready to eat
                <br>
                <input type="radio" name="devour" value="0">Devoured
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>